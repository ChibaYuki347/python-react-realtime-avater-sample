# ====================================================================================================
# Azure AI強化アバターシステム - 環境設定
# ====================================================================================================

# Phase 1: Azure Configuration (GPT-4.1 + Speech Service)
KEY_VAULT_URL=https://ai-avatar-staging-kv.vault.azure.net/
OPENAI_ENDPOINT=https://ai-avatar-staging-openai.openai.azure.com/
OPENAI_API_VERSION=2024-02-01
OPENAI_DEPLOYMENT_NAME=gpt-4-1
SPEECH_SERVICE_REGION=eastus
ENVIRONMENT=staging

# Local Development Fallback (for testing without Azure Key Vault)
# OPENAI_API_KEY=your_openai_api_key_here  
# SPEECH_SERVICE_KEY=your_speech_service_key_here

# Phase 2: RAG System Configuration
# RAG機能用のAzure OpenAI設定（Phase 1と同じ設定を流用）
AZURE_OPENAI_ENDPOINT=https://ai-avatar-staging-openai.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4-1
# AZURE_OPENAI_KEY=your_azure_openai_key_here (Key Vaultから取得)

# Azure Storage Configuration (for RAG document storage)
AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string_here
AZURE_STORAGE_CONTAINER_NAME=rag-documents

# Azure AI Search Configuration
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net/
AZURE_SEARCH_KEY=your_search_key_here
AZURE_SEARCH_INDEX_NAME=rag-index

# Server Configuration
PORT=8000
DEBUG=true

# ====================================================================================================
# アバターシステム設定
# ====================================================================================================

# 標準音声設定
# 標準音声の例: ja-JP-NanamiNeural, ja-JP-KeitaNeural, en-US-AriaNeural
DEFAULT_VOICE_NAME=ja-JP-NanamiNeural
DEFAULT_VOICE_LANGUAGE=ja-JP

# 標準アバター設定
# 標準アバター: lisa, anna, etc.
DEFAULT_AVATAR_CHARACTER=lisa
DEFAULT_AVATAR_STYLE=casual-sitting

# アバタービデオフォーマット
DEFAULT_VIDEO_FORMAT=mp4

# ====================================================================================================
# カスタム設定（オプション）
# ====================================================================================================

# カスタムアバター設定
CUSTOM_AVATAR_ENABLED=true
CUSTOM_AVATAR_CHARACTER=
CUSTOM_AVATAR_STYLE=

# カスタムボイス設定（JSON形式）
# 例: AVAILABLE_CUSTOM_VOICES=CustomVoice1,CustomVoice2
# 例: CUSTOM_VOICE_DEPLOYMENT_IDS={"CustomVoice1": "deployment-id-1", "CustomVoice2": "deployment-id-2"}
AVAILABLE_CUSTOM_VOICES=
CUSTOM_VOICE_DEPLOYMENT_IDS={}